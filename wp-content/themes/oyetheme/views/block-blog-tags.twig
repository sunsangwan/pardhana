<div class="block-blog-tags block-info">
	<h3 class="heading">{{theme_opt.tags_heading}}</h3>
	<div class="content-wrapper">			  	
		<ul class="recent-articles-list">
			{% for tag in tags %}
					<a class="btn btn-tag" href="{{ function( 'get_tag_link', tag.term_id ) }}">{{tag.name}}</a>
			{% endfor %}    
		</ul>
	</div>
</div>