<section class="pt70 pb70 section-contact-info {{class}}">
	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<h2>{{data.contact_info_title}}</h2>
				<div class="info-wrapper info-wrapper--vtop">
					<i class="fa fa-map-marker" aria-hidden="true"></i>
					<span><a href="{{theme_opt.contact_form_address_iframe_url}}" target="_blank">{{data.contact_address_title}}<br>{{data.contact_address}}</a></span>
				</div>
				<div class="info-wrapper">
					<i class="fa fa-phone" aria-hidden="true"></i>
					<span>{{data.contact_phone_title}}: <a href="tel:{{data.contact_phone_text}}">{{data.contact_phone_text}}</a></span>
				</div>
				<div class="info-wrapper">
					<i class="fa fa-envelope-o" aria-hidden="true"></i>
					<span>{{data.contact_email_title}}: <a href="mailto:{{data.contact_email_text}}">{{data.contact_email_text}}</a></span>
				</div>
				<div class="info-wrapper info-wrapper--vtop">
					<i class="fa fa-clock-o" aria-hidden="true"></i>
					<span>{{data.contact_timing}}</span>
				</div>
			</div>
			<div class="col-md-8">
				<div class="contactForm">
					<h2>{{data.contact_form_title}}</h2>
					{{data.contact_form_shortcode}}
					<div class="row">
						<div class="col-md-12 text-uppercase mt20 note">
							{{data.contact_form_note}} <a href="{{data.contact_form_note_link}}">{{data.contact_form_note_link_text}}</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>