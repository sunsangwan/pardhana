<html>
<head>
	{{head_start_customcode|raw}}
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<meta name="robots" content="noindex,nofollow">
	{{head_close_customcode|raw}}
</head>

<body>
{{body_start_customcode|raw}}

	<div class="page404">
		<div class="page404-inner">
		  		<div class="oops" >{{title}}</div>
		  		<br/>
		  		<a href="{{button_link}}" class="btn">{{button_text}}</a>
			</div>
		</div>
	</div>

<style type="text/css">
	html, body {
		margin:0;
		opacity: 1 !important;
		height: 100%;
		width: 100%;
		overflow: hidden;
	}

	.page404 {
		display: table;
		width: 100%;
  		height: 100%;
		padding: 30px 10px;
		background-color: {{page_background_color}};
	}
	.page404-inner {
	    display: table-cell;
    	width: 100%;
    	vertical-align: middle;
  		text-align: center;
		color: {{page_text_color}};
		font-size: 50px;
		font-family: 'Open Sans', sans-serif;
	}
	
	.page404-inner a {
		margin-top: 50px;
	    padding: 11px 26px;
	    border: 1px solid #fff;
	    border-radius: 6px;
        font-size: 18px;
	    text-decoration: none;
	    background-color: {{button_background_color}};
	    color : {{button_text_color}} !important;
		font-family: 'Open Sans', sans-serif;
		height: auto;
	    text-transform: uppercase;
	}

	.page404-inner a:hover {
		color : {{button_hover_text_color}};
		background-color: {{button_hover_background_color}};
	}
	
	@media screen and (max-width: 991px) {
		.page404-inner{
			font-size: 32px;
		}
	}

	@media screen and (max-width: 767px) {
		.page404-inner img {
			width: 60%;
		}
	}

</style>

</body>
</html>