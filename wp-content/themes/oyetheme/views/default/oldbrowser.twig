<html>
<head>
	{{head_start_customcode}}
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<meta name="robots" content="noindex,nofollow">
	{{head_close_customcode}}
</head>

<body>
	{{body_start_customcode}}
	<div id="oldbrowser" class="container-fluid"> 
		<div id="oldbrowser-inner">
			<div class="oopstitle">
				{{title}}
			</div>
			
			<div class="download_hier">
				{{download_here_title}}
			</div>

			<div class="row-fluid downloadrow">
				<div class="col-md-4">
					<a href="{{chrome_downloadlink}}"> <img src="{{chrome_image}}" /></a>
				</div>
				<div class="col-md-4">
					<a href="{{firefox_downloadlink}}"> <img src="{{firefox_image}}" /></a>
				</div>
				<div class="col-md-4">
					<a href="{{ie_downloadlink}}"> <img src="{{ie_image}}" /></a>
				</div>
			</div>
		</div>
	</div>

	<style type="text/css">
		html, body {
			margin:0;
			opacity: 1 !important;
			height: 100%;
			width: 100%;
		}

		.col-md-4 {
			float: left;
			width: 33%;
		}

		#oldbrowser {
			display: table;
			width: 100%;
			height: 100%;
			background-color: {{page_background_color}};
			font-family: Arial;
		}

		#oldbrowser-inner {
			display: table-cell;
			padding: 30px 10px;
			width: 100%;
			vertical-align: middle;
			text-align: center;
			color: {{page_text_color}};
		}

		#oldbrowser .oopstitle {
			padding: 0 20px;
			text-align: center;
			font-size: 50px;
			font-family: 'Open Sans', sans-serif;
		}


		#oldbrowser .download_hier {
			margin: 10% 0% 2% 0;
			text-align: center;
			font-size: 22px;
			font-family: 'Open Sans', sans-serif;
		}


		@media screen and (max-width: 991px) {
			.col-md-4 {
				float: none;
				width: 100%;
			}
			#oldbrowser .oopstitle {
				font-size: 32px;
			}
		}

		@media screen and (max-width: 767px) {
			.downloadrow img {
				width: 50%;
			}
		}


		@media screen and (max-width: 480px) {
			#oldbrowser .oopstitle {
				font-size: 24px;
			}

			#oldbrowser .download_hier {
				font-size: 20px;
			}
		}

	</style>

</body>
</html>